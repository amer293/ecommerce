<div id="modal-login" class="uk-flex-top" uk-modal>
    <div class="uk-modal-dialog">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="uk-modal-header" style="background-color: rgb(113,5,81)!important;">
            <h2 class="uk-modal-title" style="color: white!important; font-weight: bold;">Log-in</h2>
        </div>
        <div class="uk-modal-body">
            <form action="/account/login/user" method="POST">
                <fieldset class="uk-fieldset">

                    <div class="uk-margin">
                        <input class="uk-input uk-form-width-large smaller-size-for-smaller-screens"
                            placeholder="Username" type="text" name="username">
                    </div>

                    <div class="uk-margin">
                        <input class="uk-input uk-form-width-large smaller-size-for-smaller-screens"
                            placeholder="Password" type="password" name="password">
                    </div>


                    <div class="uk-margin">
                        <button class="uk-button uk-button-primary"
                            style="font-weight: bold; background-color: rgb(113,5,81)!important;"> Login
                        </button>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>
</div>